<h1>Bienvenue sur The Big Project</h1>
<div class="container">
  <div class="row">
    <% @gossips.each do |gossip| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= gossip.title %></h5>
            <p class="card-text">by <%= gossip.author.first_name %></p>
            <a href="<%= gossip_path(gossip) %>" class="btn btn-primary">Voir plus</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
